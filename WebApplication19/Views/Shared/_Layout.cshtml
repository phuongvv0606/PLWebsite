<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="/Scripts/jssor.slider.mini.js"></script>
    <script src="/Scripts/jquery.twbsPagination.min.js"></script>
    <link rel="stylesheet" href="@Url.Content("~/Content/font-awesome.min.css")">
</head>
<body>
    <div class="container-fuid" style="background: #c5c5c5">
        <div class="container">
            <div class="topfix">
                @Html.Action("TopSupport", "Home")
            </div>

        </div>
    </div>
    <div class="container">
        <div class="toppage">
            <div class="topmenu">
                @Html.Action("GetMenu", "Home")
            </div>
        </div>
        <div>
            @RenderBody()
        </div>
    </div>
    <div class="container-fuid" style="background:#000;padding-top:30px;margin-top:30px;color:#fff">
        <div class="container bottompage">
            <div class="row">
                <div class="col-lg-3">
                    @Html.Action("GetPageAddress","Home")
                </div>
                <div class="col-lg-5">
                    @Html.Action("BottomSupport", "Home")
                </div>
                <div class="col-lg-2">
                    <ul>
                        @for (int i = 0; i < 10; i++)
                        {
                            <li>
                                <a href="#">
                                    Liên kết @i
                                </a>
                            </li>
                        }


                    </ul>
                </div>
                <div class="col-lg-2">
                    <ul>
                        @for (int i = 0; i < 10; i++)
                        {
                            <li>
                                <a href="#">
                                    Liên kết @i
                                </a>
                            </li>
                        }


                    </ul>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
<style>
    img {
        max-width: 100%;
        display: block;
        margin: auto;
    }

    .navbar-inverse {
        background-color: #fff;
        border-color: #fff;
        color: #000;
    }



    .topfix {
        display: inline-block;
        width: 100%;
        margin-top: 3px;
    }

        .topfix ul {
            display: inline-block;
            margin: 0px;
            padding: 0px;
        }

            .topfix ul li {
                float: left;
                margin: 0px 20px 0px 0px;
            }

                .topfix ul li a {
                    color: #fff;
                    font-weight: bold;
                }

    ul {
        list-style-type: none;
        margin:0px;
        padding:0px;
    }

    a {
        text-decoration: none;
    }

        a:hover, a:focus {
            text-decoration: none;
        }

    .productitem {
        border: solid 1px #fff;
        box-shadow: 0 0 10px;
        margin-bottom: 10px;
    }

    .imagepreview {
        padding: 5px;
    }

        .imagepreview img {
            max-width: 100%;
            display: block;
            margin: auto;
        }

    .proname {
        font-weight: bold;
        text-align: center;
    }
    .chidcate {
    }

        .chidcate ul {
            margin: 0px;
            padding: 0px;
        }

            .chidcate ul li {
                margin: 0px;
                padding: 5px 10px;
                border:solid 1px;

            }
</style>