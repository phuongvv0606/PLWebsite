@model List<WebApplication19.Models.Article>

@foreach (var item in Model)
{
    <div class="col-lg-3 col-md-6">
        <div>
            <a href="@Url.Action("ArticleDetail", "Home", new { id = item.Id, seourl = item.SeoUrl })">
                <h3>
                    @item.Titles
                </h3>
            </a>
        </div>
        <div>
            <img src="@Url.Content(item.ImagePreview)" />
        </div>
        <div>
            @Html.Raw(item.SortDesc)
        </div>
        <div>
            <a href="@Url.Action("ArticleDetail", "Home", new { id = item.Id, seourl = item.SeoUrl })">
                Xem thêm
            </a>
        </div>
    </div>
}
